  --prefix=/curc/sw/gdal/2.1.0/gcc/6.1.0 \
  --with-png=internal \
  --with-jpeg=internal \
  --with-geotiff=internal \
  --with-libtiff=internal \
  --with-gif=internal \
  --with-hdf5=${CURC_HDF5_ROOT} \
  --with-netcdf=${CURC_NETCDF_ROOT} \
  --with-curl=/usr/bin \
  --with-xml2=/usr/bin \
  --with-pcraster=internal \
  --with-jasper=${CURC_JASPER_ROOT} \
  --with-geos=yes
make -j12
make install
curcb -i
make distclean
curcb


